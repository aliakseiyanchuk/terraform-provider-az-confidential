locals {
  public_key = <<-PUBLIC_KEY
               {{- range $l := linesOf .PublicKey }}
               {{ $l }}
               {{- end -}}
               PUBLIC_KEY
}

output "encrypted_kv_content" {
  value = provider::az-confidential::encrypt_general_content (
    "This is a very confidential content",
    # There is no placement destination for content
    {
      expires_after = {{ .ExpiresAfterDays }}
      num_uses = {{ .NumUses }}
      provider_constraints = toset([
      {{- range $value := .ProviderConstraints }}
        "{{ $value }}",
      {{- end }}
      ])
    },
    local.public_key
  )
}