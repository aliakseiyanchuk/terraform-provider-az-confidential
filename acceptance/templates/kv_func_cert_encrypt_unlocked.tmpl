locals {
  public_key = <<-PUBLIC_KEY
               {{- range $l := linesOf .PublicKey }}
               {{ $l }}
               {{- end -}}
               PUBLIC_KEY
}

output "encrypted_kv_cert" {
  value = provider::az-confidential::encrypt_keyvault_certificate(
    {
        certificate = "{{ .Certificate }}"
        password = "{{ .Password }}"
    },
    null, # No locking
    {
      create_limit = "{{ .CreateLimit }}"
      expires_after = {{ .ExpiresAfterDays }}
      num_uses = {{ .NumUses }}
      provider_constraints = toset([
      {{- range $value := .ProviderConstraints }}
        "{{ $value }}",
      {{- end }}
      ])
    },
    local.public_key
  )
}