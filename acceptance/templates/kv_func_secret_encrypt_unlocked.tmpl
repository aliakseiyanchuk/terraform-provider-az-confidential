locals {
  public_key = <<-PUBLIC_KEY
               {{- range $l := linesOf .PublicKey }}
               {{ $l }}
               {{- end -}}
               PUBLIC_KEY
}

output "encrypted_kv_secret" {
  value = provider::az-confidential::encrypt_keyvault_secret(
     "kv secret",
    null, # No locking
    {
      create_limit = "{{ .CreateLimit }}"
      expires_in = {{ .ExpiresIn }}
      num_uses = {{ .NumUses }}
      provider_constraints = toset([
      {{- range $value := .ProviderConstraints }}
        "{{ $value }}",
      {{- end }}
      ])
    },
    local.public_key
  )
}